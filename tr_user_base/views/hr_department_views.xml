<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_department_form_tr_user_base" model="ir.ui.view">
            <field name="name">hr.department.form.tr.user.base</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="before">
                    <field name="code" />
                </xpath>
            </field>
        </record>
        <record id="view_department_tree_tr_user_base" model="ir.ui.view">
            <field name="name">hr.department.tree.tr.user.base</field>
            <field name="model">hr.department</field>
            <field name="inherit_id" ref="hr.view_department_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='manager_id']" position="before">
                    <field name="code" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>