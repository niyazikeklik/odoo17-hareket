<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_ifs_view" model="ir.ui.view">
            <field name="name">res.company.form.ifs.inherit</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_info']" position="inside">
                    <group name="ifs" string="IFS Bağlantısı">
                        <field name="ifs_link"/>
                        <field name="ifs_sirket_kodu"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>